    <script type="text/javascript">

        $(function () {
            pCargarCapcha();
            $('#btnCapcha').click(pCargarCapcha);
            $('#UserName').focus();

            $("#frmLogin").validate({
                errorClass: "text-danger",
                validClass: "text-success",
                errorElement: "p",
                ignoreTitle: true,
                highlight: function (element) {
                    $(element).addClass('border-danger');
                },
                unhighlight: function (element) {
                    $(element).removeClass('border-danger');
                },
                submitHandler: function (form) {
                    $('#btnIngresa').Espera();
                    return true;
                },
                invalidHandler: function (event, validator) {
                    $('#btnIngresa').TerminaEspera();
                }
            });
        });

        

        pCargarCapcha = function () {
            var uri = '@Url.Action("GetCapchaLg", "Manage")';
            $.ajax({
                url: uri,
                type: 'Get',
                cache: false,
                contentType: 'application/json',
                data: {},
                success: function (data) {
                    $('#TXCAPCHA').val(data.TXCAPCHA);
                    MostrarCapcha(data.base64imagen);
                },
                //complete: function () {

                //    setTimeout(function () { $("#NU_DOCUMENTO").focus(); }, 500);
                //}
            });
        }

        var MostrarCapcha = function (data) { var img = "<img  alt='Captcha' style='max-width: 100%; max-height: 100%;' src='" + "data:image/jpg;base64," + data + "' />"; $("#divCapcha").html(img) };


    </script>



            <div class="content-body">
                <section class="col-md-4 offset-md-4 col-xs-8 offset-xs-2 box-shadow-2 p-0" >
                    <div class="card border-grey border-lighten-3 px-2 py-2 row mb-0">
                        <div class="card-header no-border">
                            <div class="card-title text-xs-center">
                                <img src="@Url.Content("~/wwwroot/images/logo-light-negro.png")" alt="branding logo">
                            </div>
                            <h6 class="card-subtitle line-on-side text-muted text-xs-center font-small-3 pt-2"><span>Login del SROP</span></h6>
                        </div>
                        <div class="card-body collapse in">
                            <div class="card-block">
                                <span id="pMensaje">
                                    @{
                                        Html.RenderAction("Mensaje", "Manage", new { area = DBNull.Value });
                                        //Html.RenderPartial(CO_Constante.NO_VARIABLE_GLOBAL_RUTA_VIEW_MENSAJE, Html.ViewData.ModelState.AllErrors());
                                    }
                                </span>
                                <form class="form-horizontal" method="post" id="frmLogin" autocomplete="off" action='@Url.Action("Login", "Account", new { area = System.DBNull.Value })' >                                   
                                    <div class="form-group position-relative has-icon-left">
                                        @Html.text(x => x.UserId,  new {@class= "form-control input-lg", tabindex="1" },null,true,true)
                                        <div class="form-control-position">
                                            <i class="icon-head"></i>
                                        </div>
                                    </div>
                                    <div class="form-group position-relative has-icon-left">
                                        @Html.password(x => x.PasswordInTextBox, new { @class = "form-control input-lg", tabindex = "2" }, null, true, true)
                                        <div class="form-control-position"><i class="icon-key3"></i></div>
                                    </div>
                                    <div class="form-group position-relative has-icon-left">
                                        <div class="input-group">
                                            @*<span id="btnCapcha" title="Cambiar imagen" class="input-group-addon btn btn-default"><i class="icon-refresh"></i></span>*@
                                            <span class="input-group-addon" id="divCapcha"></span>
                                        </div>
                                    </div>
                                    <div class="input-group input-group-lg">
                                        @Html.text(x => x.TXCAPCHA, new { @class = "form-control input-lg center", tabindex = "3" }, null, true, true)
                                       @* <input type="text" class="form-control input-lg text-center" id="TXCAPCHA" name="TXCAPCHA" placeholder="Ingrese codigo" required aria-label="Amount" tabindex="3" />*@
                                        <span class="input-group-btn">
                                            <button class="btn btn-danger" id="btnCapcha" type="button" title="Mostrar otra imagen"><i class="icon-refresh"></i></button>
                                        </span>
                                    </div>
                                    <div class="form-actions">
                                        @*<button type="submit" class="btn btn-success">Submit <i class="icon-thumbs-up position-right"></i></button>*@
                                        <button type="submit" id="btnIngresa" class="btn btn-danger btn-lg btn-block"><i class="icon-unlock2"></i> Login</button>
                                    </div>
                                    @*@Html.ActionLink("upoad", "ClientUpload","Manage", new {area="" })*@
                                </form>
                            </div>

@model IEnumerable<BE_Asiento>
@{ 
    int rowIndex = 0;
}    
@if (Model.Count() > 0)
{
    <table id="tblAsiento" class="table table-bordered mb-0">
        <thead class="thead-default">
            <tr>
                <th>Eliminar</th>
                <th>N°</th>
                <th>Asiento</th>
                <th>Fecha Asiento</th>
                <th>Tipo</th>
                <th>Comentario</th>
                <th>Ver</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BE_Asiento item in Model)
            {
                rowIndex = rowIndex + 1;
                <tr>
                    <td>
                        <button type="button" data-codigo='{"Num_Asiento": @item.Num_Asiento, "Cod_OP": @item.Cod_OP}' title='¿Eliminar?'  class="btn btn-icon btn-pure danger" data-toggle="elimina-asiento" data-placement="top">
                            <i class="icon-android-delete"></i>
                        </button>
                    </td>
                    <td>@item.Num_Asiento.CerosIzquierda(3)</td>
                    <td><a class="edita-asiento" data-toggle="modal" data-target="#WinComun" href="#" data-codigo='{"Num_Asiento": @item.Num_Asiento, "Cod_OP": @item.Cod_OP, "ESTADOPAGINA": "@enumEstadoPagina.Edicion"}' >@item.Asiento</a></td>
                    <td>@item.Fec_Asiento.Text("dd/MM/yyyy")</td>
                    <td>@item.Des_Tipo_Asiento</td>
                    <td>@item.Observ</td>
                    @*@{if (rowIndex > 1) {
                                <td><button type="button" data-toggle="modal" data-target="#WinComun" class="btn btn-icon btn-pure insertEtapa" data-codigo='{"Cod_Correlativo": @item.Cod_Correlativo, "Cod_OP": @item.Cod_OP , "ESTADOPAGINA" : "@enumEstadoPagina.Insertar" }' title='@string.Concat("Insertar Etapa entre ", item.Cod_Correlativo - 1, " y ", item.Cod_Correlativo)' ><i class="icon-plus-square-o"></i></button></td>
                         }
                    }*@
                </tr>
            }
        </tbody>
    </table>
}
@Glo.Paginador()
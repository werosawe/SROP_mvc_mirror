@model IEnumerable<BE_Estatuto>
@{ 
    int rowIndex = 0;
}    
@if (Model.Count() > 0)
{
    <table id="tblEstatuto" class="table table-bordered mb-0">
        <thead class="thead-default">
            <tr>
                <th>Eliminar</th>
                <th>N°</th>
                <th>Título del estatuto</th>
                <th>Fecha del estatuto</th>
                <th>Vigencia en cargo de directivo</th>
                <th>Ver</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BE_Estatuto item in Model)
            {
                rowIndex = rowIndex + 1;
                <tr>
                    <td>
                        <button type="button" data-codigo='{"Cod_Correlativo": @item., "Cod_OP": @item.Cod_OP}' title='¿Eliminar?'  class="btn btn-icon btn-pure danger" data-toggle="eliminaestatuto" data-placement="top">
                            <i class="icon-android-delete"></i>
                        </button>
                    </td>
                    <td>@item.Orden</td>
                    <td><a class="editEstatuto" data-toggle="modal" data-target="#WinComun" href="#" data-codigo='{"Orden": @item.Orden, "Cod_OP": @item.Cod_OP, "ESTADOPAGINA": "@enumEstadoPagina.Edicion"}' >@item.Des_Doc</a></td>
                    <td>@item.Fec_Doc.Text("dd/MM/yyyy")</td>
                    <td>@string.Concat(item.Anos_Vigencia_Cargo.CerosIzquierda(2), " años")</td>
                    @*@{if (rowIndex > 1) {
                                <td><button type="button" data-toggle="modal" data-target="#WinComun" class="btn btn-icon btn-pure insertEtapa" data-codigo='{"Cod_Correlativo": @item.Cod_Correlativo, "Cod_OP": @item.Cod_OP , "ESTADOPAGINA" : "@enumEstadoPagina.Insertar" }' title='@string.Concat("Insertar Etapa entre ", item.Cod_Correlativo - 1, " y ", item.Cod_Correlativo)' ><i class="icon-plus-square-o"></i></button></td>
                         }
                    }*@
                </tr>
            }
        </tbody>
    </table>
}
@Glo.Paginador()